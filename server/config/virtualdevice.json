{
  "userInfo": {
    "user": "${env.XIVELY_ACCOUNT_BROKER_USER}",
    "password": "${env.XIVELY_ACCOUNT_BROKER_PASSWORD}"
  },
  "mqtt": {
    "mqttBroker": "${env.XIVELY_BROKER_HOST}",
    "mqttPort": "${env.XIVELY_BROKER_PORT}",
    "mqttWsPort": "${env.XIVELY_BROKER_WS_PORT}",
    "mqttUseSSL": true,
    "deviceId": "${device.id}",
    "mqttDataChannel": "${_.find(device.channels, 'channelTemplateName', 'sensor').channel}",
    "mqttControlChannel": "${_.find(device.channels, 'channelTemplateName', 'control').channel}",
    "mqttDeviceDataChannel": "${_.find(device.channels, 'channelTemplateName', 'device-log').channel}"
  }
}
